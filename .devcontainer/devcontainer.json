{
  "name": "Swiss",
  "build": {
    "dockerfile": "../Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers-contrib/features/poetry:2": {
      "version": "1.7.1"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/zsh",
        "python.linting.mypyEnabled": true,
        "python.linting.enabled": true,
        "python.analysis.typeCheckingMode": "strict",
        "python.analysis.diagnosticMode": "workspace",
        "editor.formatOnSave": true,
        "python.languageServer": "Pylance", // Disable Pylance
        "python.linting.pylintEnabled": true, // Enable Pylint
        "python.formatting.provider": "black", // Use Black for formatting
        "editor.codeActionsOnSave": {
          "source.organizeImports": true,
          "source.fixAll": true // Automatically fix linting issues on save
        }
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.mypy-type-checker",
        "ms-python.isort",
        "ms-python.pylint",
        "charliermarsh.ruff",
        "tamasfe.even-better-toml"
      ]
    }
  },
  "remoteUser": "vscode"
}